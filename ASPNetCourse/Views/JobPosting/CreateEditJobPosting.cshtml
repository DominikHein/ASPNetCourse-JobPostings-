@model ASPNetCourse.Models.JobPosting
@{
    ViewData["Title"] = "Deine Inserate Bearbeiten";
}

<h6>Inserat bearbeiten</h6>

<div class="card">
    <div class="card-header">
        <h6>Inserat bearbeiten</h6>
    </div>
    <div class="card-body">
        @* Form mit Feldern aus dem JobPosting Model *@
        <form asp-controller="JobPosting" asp-action="CreateEditJob" method="post" enctype="multipart/form-data">
            <div class="section">
                <div class="row form-group">
                    <div class="col">
                        <input class="form-control" asp-for="JobTitle" type="text" placeholder="Bitte trage eine Job Bezeichnung ein" />
                    </div>
                    <div class="col">
                        <input class="form-control" asp-for="JobLocation" type="text" placeholder="Bitte trage einen Ort ein" />
                    </div>
                </div>
            </div>

            <div class="section">
                <div class="row form-group">
                    <div class="col">
                        <textarea rows="6" class="form-control" asp-for="JobDescription" placeholder="Bitte trage eine ausführliche Job Bezeichnung ein"></textarea>
                    </div>
                </div>
            </div>

            <div class="section">
                <div class="row form-group">
                    <div class="col-6">
                        <input class="form-control" asp-for="Salary" type="number" placeholder="Bitte tragen Sie eine Gehaltsvorstellung ein" />
                    </div>
                </div>
            </div>

            <div class="section">
                <div class="row form-group">
                    <div class="col-6">
                        <div class="col-form-label-3">
                            Wann startet der neue Job
                        </div>
                        <input class="form-control" asp-for="StartDate" type="date" />
                    </div>
                </div>
            </div>

            <div class="section">
                <div class="row form-group">
                    <div class="col">
                        <input class="form-control" asp-for="CompanyName" type="text" placeholder="Wie heißt die Firma" />
                    </div>
                    <div class="col">
                        <input class="form-control" asp-for="ContactWebsite" type="url" placeholder="Wie lautet die Webadresse der Firma" />
                    </div>
                </div>
            </div>

            <div class="section">
                <div class="row form-group">
                    <div class="col">
                        <input class="form-control" asp-for="ContactPhone" type="tel" placeholder="Kontakt Telefonnummer" />
                    </div>
                    <div class="col">
                        <input class="form-control" asp-for="ContactMail" type="email" placeholder="Kontakt E-Mail Adresse" />
                    </div>
                </div>
            </div>

            <div class="section">
                <div class="row form-group">
                    <div class="col">
                        <label class="form-label">Bild Hochladen</label>
                        <input class="form-control" type="file" name="companyImage">

                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button class="btn btn-primary" type="submit">Speichern</button>
            </div>
        </form>
    </div>
</div>
